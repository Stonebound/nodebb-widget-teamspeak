{
    "id": "nodebb-widget-teamspeak-sb",
    "name": "NodeBB Teamspeak 3 widget",
    "description": "Teamspeak 3 server widget for NodeBB - Stonebound Fork",
    "url": "https://github.com/Stonebound/nodebb-widget-teamspeak",
    "library": "library.js",
    "staticDirs": {
        "public": "public"
    },
    "hooks": [
        { "hook": "filter:widgets.getWidgets", "method": "defineWidget" },
        { "hook": "filter:widget.render:teamspeak", "method": "renderTSwidget" }
    ],
    "css": [
    	"public/style.css"
    ],
    "templates": "public/templates"
}
